<div class="container">
<h1>Your Foods</h1>

<%= link_to 'Add Food', new_food_path, class: 'btn btn-primary mb-3 float-end' %>

<table class="table table-bordered">
<thead>
<tr>
  <th>Food</th>
  <th>Measurement Unit</th>
  <th>Unit Price</th>
  <th>Handle</th>
</tr>
</thead>
<tbody>
<% @foods.each do |food| %>
<tr>
<td><%= food.name %></td>
<td><%= food.measurement_unit %></td>
<td><%= food.price %></td>
<td><%= button_to "Delete", food_path(food.id), method: :delete, class: 'btn btn-sm btn-danger' %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
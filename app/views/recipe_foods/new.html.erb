<section class="container pt-2">
  <%= form_with model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe) do |form| %>
    <div class='col-md-4'>
      <div class='form-group'>
        <%= form.number_field :quantity, class: 'form-control', placeholder: 'Quantity', min: 0 %>
        <%= form.hidden_field :recipe_id, value: @recipe.id %>
      </div>
      <div class='form-group'>
        <label for="foods" class='form-label'>Select a Food</label>
        <%= form.select :food_id, options_for_select(@foods.map { |food| [food.name, food.id] }), {}, { id: 'food', class: 'form-select' } %>

      </div>
      <div class='form-group'>
        <%= form.submit 'Add to Recipe', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</section>
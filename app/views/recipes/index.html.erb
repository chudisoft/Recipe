<div class="container">
<div class="add-btn">
<button type="button" class="btn btn-primary"><%= link_to "Add Recipe", new_recipe_path, class: "no-underline"%></button>
</div>
<% @recipes.each do |recipe| %>
<div class="row recipe">
<div class="col-4">
<div class="row"><%= link_to recipe.name, recipe_path(recipe.id)  %></div>
<div class="row"> By <%= recipe.user.name %></div>
</div>
<div class="col-6"><%= recipe.description %></div>
<div class="col-2">
<%= button_to "Delete", recipe_path(recipe.id), method: :delete %>
</div>
</div>
<% end %>


